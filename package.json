  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "next dev",
    "start": "next start",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "test:ocr-zkp": "ts-node --esm scripts/test-ocr-zkp.ts",
    "test:ocr-simple": "node scripts/test-ocr-simple.mjs",
    "test:api": "node scripts/test-api.js",
    "test:ocr-doc": "node scripts/test-ocr-doc.js",
    "test:ocr-sdk": "node scripts/test-ocr-sdk.js",
    "test:ocr-url": "node scripts/test-ocr-url.js",
    "test:ocr-direct": "node scripts/ocr-direct-api.js",
    "zkp:mina": "NODE_OPTIONS=\"--max-old-space-size=8192\" node scripts/ocr-zkp-mina.js",
    "zkp:simple": "NODE_OPTIONS=\"--max-old-space-size=8192\" node scripts/zkp-simple.js",
    "zkp:advanced": "NODE_OPTIONS=\"--max-old-space-size=8192\" node scripts/zkp-advanced.js",
    "zkp:universel": "NODE_OPTIONS=\"--max-old-space-size=8192\" node scripts/zkp-universelle.js",
    "zkp:test": "node scripts/zkp-test.js",
    "ai:judge": "node scripts/ai-judge.js",
    "ocr:scolarite": "node scripts/ocr-certificat-scolarite.js",
    "simulate": "node scripts/simulate-ocr-zkp.js",
    "real:ocr-zkp": "node scripts/ocr-real-zkp.js",
    "zkp:simulate": "node scripts/ocr-real-zkp.js",
    "ocr:mistral": "node scripts/ocr-mistral.js",
    "verification:complete": "node scripts/verification-complete.js",
    "zkp:compile": "node -e \"import('./contracts/AffirmationVerifier.js').then(m => m.ContractAffirmationVerifier.compile())\""
  },
  "keywords": [
    "zkp",
    "mina",
    "legal",
    "verification",
    "blockchain",
    "o1js"
